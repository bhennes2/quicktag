<h1>Listing tags</h1>

<table>
  <tr>
    <th>Time</th>
    <th>Title</th>
    <th>Notes</th>
    <th>Location</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tags.each do |tag| %>
  <tr>
    <td><%= tag.time %></td>
    <td><%= tag.title %></td>
    <td><%= tag.notes %></td>
    <td><%= tag.location %></td>
    <td><%= tag.user_id %></td>
    <td><%= link_to 'Show', tag %></td>
    <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
    <td><%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

